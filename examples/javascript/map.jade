extends layout

block content
	.map(style="width:#{width*tilewidth}px;height:#{height*tileheight}px;")
		- for (var l=0; l<tiles.length; l++)
			.layer(style="width:#{width*tilewidth}px;height:#{height*tileheight}px;z-index:#{l};")
				- var count = 0
				- for (var y = 0; y<height; y++)
					- for (var x = 0; x<width; x++, count++)
						.tile(class="tid_#{tiles[l][count].t_id} ts_#{tiles[l][count].ts_id}")