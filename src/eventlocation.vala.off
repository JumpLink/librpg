using HMP;
namespace HMP {
	/**
	 * Abstrakte Klasse fuer einen Ort, an dem durch einen Spieler
	 * ein Ereignis ausgeloest werden kann.
	 */
	public abstract class EventLocation {
		/**
		 * Ausloesen des Ereignisses.
		 * @param p Der Spieler.
		 */
		public abstract void trigger (Player p);
	}
}